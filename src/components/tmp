<v-file-input
      label="Fahrzeugbilder"
      outlined
      @change="onChange"
    />
    <v-list>
      <v-list-item
        v-for="(image, index) in images"
        :key="image.id"
      >
        <v-list-item-avatar>
          <v-img
            :src="image.src"
            @click="previewImage(image)"
          />
        </v-list-item-avatar>

        <v-list-item-action>
          <v-icon
            color="accent"
            @click="useImageAsThumbnail(image)"
          >
            {{ index === 0 ? 'mdi-star' : 'mdi-star-outline' }}
          </v-icon>
        </v-list-item-action>
        <v-list-item-action>
          <v-icon
            color="accent"
            @click="deleteImage(image.id)"
          >
            mdi-delete
          </v-icon>
        </v-list-item-action>

        <v-list-item-content>
          <v-list-item-title v-text="image.id" />
        </v-list-item-content>

        <v-list-item-action>
          <v-icon
            v-if="index !== 0"
            color="accent"
            @click="imageUp(image)"
          >
            mdi-arrow-up
          </v-icon>
        </v-list-item-action>
        <v-list-item-action>
          <v-icon
            v-if="index !== images.length -1"
            color="accent"
            @click="imageDown(image)"
          >
            mdi-arrow-down
          </v-icon>
        </v-list-item-action>
      </v-list-item>
    </v-list>